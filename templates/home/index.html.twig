{% extends 'base.html.twig' %}

{% block title %}Théo Barreira{% endblock %}

{% block body %}

    <header id="home-header">
        <div id="header-img"></div>
        <h1>THÉO BARREIRA</h1>
        <h2>PORTOFOLIO</h2>
    </header>

    <main class="container-fluid p-5">
        <div class="row" id="projet-text">
            <h1>Projet</h1>
            {% for project in projet %}
                    <div class="col-4 p-3">
                        <div class="card">
                            <img src="{{ asset('img/' ~ project.imgProject) }}" class="card-img-top" alt="photo projet">
                            <div class="card-body"  id="card-text">
                                <h5 class="card-title">{{ project.title }}</h5>
                                <p class="card-text">{{ project.description|u.truncate(90, '...', false) }}</p>
                            </div>
                        </div>
                    </div>
            {% endfor %}
        </div>
        <hr size="20">
        <div class="container-fluid" id="competence-text">
